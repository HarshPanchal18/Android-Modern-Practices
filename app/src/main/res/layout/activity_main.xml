<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/linear_rv_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@color/colorPrimaryDark"
            android:drawableStart="@drawable/linearview"
            android:drawableLeft="@drawable/linearview"
            android:drawablePadding="8dp"
            android:padding="15dp"
            android:text="Linear RecyclerView"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/grid_rv_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@color/colorPrimaryDark"
            android:drawableStart="@drawable/gridview"
            android:drawableLeft="@drawable/gridview"
            android:drawablePadding="8dp"
            android:padding="15dp"
            android:text="Grid RecyclerView"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/staggered_rv_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:drawableStart="@drawable/staggeredview"
            android:drawableLeft="@drawable/staggeredview"
            android:drawablePadding="8dp"
            android:padding="15dp"
            android:text="Staggered RecyclerView"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
